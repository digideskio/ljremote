<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/jsonHelloWorld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World !" />

    <Button
        android:id="@+id/jsonLJReady"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LJ Ready ?" />

    <Button
        android:id="@+id/jsonLJVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LJ Version ?" />

    <Button
        android:id="@+id/jsonException"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want my exception" />

    <TextView
        android:id="@+id/jsonDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Results:" />

</LinearLayout>